@using System.Web.UI.WebControls
@model Exercises.Models.ViewModels.StudentVM

@{
    ViewBag.Title = "Add";
}
<style>
    .validation-summary-errors {
        color: red;
        font-weight: bold;
    }
</style>
<div class="row">
    <div class="col-xs-12 col-sm-3">
        @Html.Partial("StudentNav")
    </div>
    <div class="col-xs-12 col-sm-9">
        <div class="row">
            <div class="col-xs-12">
               

                <h3>Add Student</h3>
                @Html.ValidationSummary()
                <div class="row">
                    @using (Html.BeginForm())
                    {
                        
                        <div class="col-xs-12 col-sm-7">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h4 class="panel-title">Personal Details</h4>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label>First Name:</label>
                                        @Html.TextBoxFor(m => m.Student.FirstName, new {@class = "form-control", placeholder = "First Name"})

                                    </div>
                                    <div class="form-group">
                                        <label>Last Name:</label>
                                        @Html.TextBoxFor(m => m.Student.LastName, new {@class = "form-control", placeholder = "Last Name" })

                                    </div>
                                    <div class="form-group">
                                        <label>Major:</label>
                                        @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Select Major-",new {@class = "form-control"})

                                    </div>
                                    <div class="form-group">
                                        <label>GPA:</label>
                                        @Html.TextBoxFor(m => m.Student.GPA, new {@class = "form-control", Value = ""})

                                    </div>
                                    <h4>Courses</h4>
                                    <div class="form-group">



                                        @for (int i = 0; i < Model.CourseItems.Count; i++)
                                        {
                                            <p>

                                                @Html.CheckBoxFor(m => m.CourseItems[i].Selected)
                                                <span>@Model.CourseItems[i].Text</span>
                                                @Html.HiddenFor(m => m.CourseItems[i].Value)


                                            </p>
                                        }
                                        <h3>Address Details(Optional)</h3>
                                        <div class="form-group">
                                            <label>City</label>
                                            @Html.TextBoxFor(m => m.Student.Address.City, new { @class = "form-control", placeholder = "Enter City" })
                                        </div>
                                        <div class="form-group">
                                            <label>State</label>
                                            @Html.DropDownListFor(m => m.Student.Address.State.StateAbbreviation, Model.StateItems,"-Select State-", new { @class = "form-control" })
                                        </div>
                 
                                        <div class="form-group">
                                            <label>Street 1</label>
                                            @Html.TextBoxFor(m => m.Student.Address.Street1, new { @class = "form-control", placeholder = "Enter Street 1" })
                                        </div>
                                        <div class="form-group">
                                            <label>Street 2</label>
                                            @Html.TextBoxFor(m => m.Student.Address.Street2, new { @class = "form-control", placeholder = "Enter Street 2" })
                                        </div>
                                        <div class="form-group">
                                            <label>Postal Code</label>
                                            @Html.TextBoxFor(m => m.Student.Address.PostalCode, new { @class = "form-control", placeholder = "Enter Postal Code"})
                                        </div>
                                    </div>
                                    @Html.ActionLink("Cancel", "List", "Student", null, new { @class = "btn btn-default" })
                                    <button class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
